{
  "name": "payment-service-provider",
  "author": {
    "name": "Matheus Torres",
    "email": "matheustrres.rj@gmail.com"
  },
  "version": "1.0.0",
  "description": "Pagar.me Software Engineer technical challenge",
  "main": "index.js",
  "license": "GPL 3",
  "private": true,
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "mig:create": "sh -c 'typeorm-ts-node-commonjs migration:create ./src/infra/database/typeorm/migrations/$0'",
    "mig:gen": "dotenv -e .env -- node src/infra/database/typeorm/migrations/helpers/gen-named-migration.js",
    "mig:run": "dotenv -e .env -- tsx ./node_modules/typeorm/cli.js -d ./src/infra/database/typeorm/datasource.ts migration:run",
    "prepare": "husky install",
    "test": "jest --runInBand",
    "test:cov": "npm test -- --coverage",
    "test:staged": "npm test -- --findRelatedTests",
    "start": "dotenv -e .env -- nest start",
    "start:dev": "npm start -- --watch",
    "start:debug": "npm start -- --debug --watch",
    "start:prod": "node dist/main"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.5",
    "@nestjs/core": "^10.2.5",
    "@nestjs/event-emitter": "^2.0.2",
    "@nestjs/platform-express": "^10.2.5",
    "@nestjs/typeorm": "^10.0.0",
    "bcrypt": "^5.1.1",
    "dotenv-cli": "^7.3.0",
    "express": "^4.18.2",
    "nestjs-spelunker": "^1.1.5",
    "nestjs-zod": "^3.0.0",
    "pg": "^8.11.3",
    "typeorm": "^0.3.17",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@swc/core": "^1.3.83",
    "@swc/jest": "^0.2.29",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.6.4",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  }
}
